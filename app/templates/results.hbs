  <table>
    <th>
      <td>Item</td>
      <td>Price</td>
      <td>Add</td>
    </th>
    {{#each model.walMart as |product|}}
      <tr>
        <td class="table-data">{{#link-to 'product' product_id}}{{product.name}}{{/link-to}}</td>
        <td class="table-data"> ${{product.salePrice}} </td>
        <td class="table-data">
          <div>
            <form>
                {{input value=product.name id=product.name type="hidden"}}
                {{input value=product.salePrice id=product.salePrice type="hidden"}}
              <button {{action 'saveProduct' product}}>Add to Cart</button>
                {{new-discuss model=product newDiscuss="newDiscuss"}}
            </form>
          </div>
        </td>
      </tr>
    {{/each}}

